# Node Environment
NODE_ENV=development

# Server Configuration
PORT=4000
HOST=localhost
API_PREFIX=/api/v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=greenai
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# JWT Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=24h

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
WALLET_PRIVATE_KEY=your_wallet_private_key_here

# Asset Storage
IPFS_GATEWAY=https://ipfs.io/ipfs/
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Verification Service
VERIFICATION_API_KEY=your_verification_api_key

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_API_KEY=your_analytics_api_key

# Feature Flags
ENABLE_MEME_GENERATION=true
ENABLE_NFT_MINTING=true
ENABLE_ENVIRONMENTAL_ACTIONS=true

# Third Party Integration
OPENAI_API_KEY=your_openai_api_key

# External Services
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# Monitoring
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# AI Services
STABLE_DIFFUSION_API_KEY=your-stable-diffusion-api-key

# Storage
REDIS_URL=redis://localhost:6379
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=greenai-storage

# Blockchain
PUMP_FUN_API_KEY=your-pump-fun-api-key

# Feature Flags
ENABLE_AI_MEME_GENERATION=true
ENABLE_HARDWARE_INTEGRATION=true
ENABLE_SOCIAL_SHARING=true 